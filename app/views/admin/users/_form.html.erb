<%= form_with model: [:admin, @user], local: true do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= @user.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="user_column">
    *<%= form.label :名前 %>
    <%= form.text_field :name %>
  </div>

  <div class="user_column">
    *<%= form.label :メールアドレス %>
    <%= form.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="user_column">
    *<%= form.label :パスワード %>
    <%= form.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="user_column">
    *<%= form.label :確認用パスワード %>
    <%= form.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="user_column">
    <%= form.label :住んでいる県 %>
    <%= form.select :prefecture, Zoo.prefectures.keys.to_a, prompt: "選択してください" %>
  </div>

  <div class="user_column">
    <%= form.label :よく行く県 %>
    <%= form.select :prefecture, Zoo.prefectures.keys.to_a, prompt: "選択してください" %>
  </div>

  <div class="user_column">
    <%= form.label :自己紹介 %>
    <%= form.text_area :content %>
  </div>

  <div class="user_column">
    <%= form.label :アイコン %>
    <%= image_tag(@user.icon.url) if @user.icon && @user.icon.url %>
    <%= form.file_field :icon %>
  </div>

  <% if current_user.admin == true %>
    <div class="user_column">
      *<%= form.label :オーナー権限 %>
      <%= form.check_box :owner, {}, true, false %>
    </div>

    <div class="user_column">
      *<%= form.label :管理者権限 %>
      <%= form.check_box :admin, {}, true, false %>
    </div>
  <% end %>

  <%= form.submit %>
<% end %>

<%= link_to "一覧画面にもどる", admin_users_path %>
